<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="100">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        tools:context="softmates.ourspot_android.ourSpot" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#CCd6d7d7"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnEmpty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.46"
            android:text="Empty"
            android:textColor="@android:color/holo_green_light"
            android:textSize="20sp"
            android:onClick="clickedEmpty"
            />

        <Button
            android:id="@+id/btnDirections"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.24"
            android:text="Directions"
            android:textColor="@color/colorPrimaryDark"
            android:textColorLink="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:onClick="clickedDirections"
            />

        <Button
            android:id="@+id/btnTaken"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:text="Taken"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:onClick="clickedDirections"
            />

    </LinearLayout>

</LinearLayout>
