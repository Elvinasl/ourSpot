<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="softmates.ourspot_android.ourSpot"
        xmlns:tools="http://schemas.android.com/tools"
        tools:layout="@layout/activity_our_spot" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnEmpty"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.17"
            android:background="@drawable/button_empty"
            android:onClick="clickedEmpty"
            android:soundEffectsEnabled="true"
            android:text="Empty"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnDirections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.24"
            android:background="@drawable/button_directions"
            android:onClick="clickedDirections"
            android:soundEffectsEnabled="true"
            android:text="Directions"
            android:textColor="#ffffff"
            android:textColorLink="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <Button
        android:id="@+id/btnTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/button_taken"
        android:onClick="clickedDirections"
        android:soundEffectsEnabled="true"
        android:text="Taken"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_weight="0.17" />

</LinearLayout>

</FrameLayout>
