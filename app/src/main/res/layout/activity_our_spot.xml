<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="100">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        tools:context="softmates.ourspot_android.ourSpot"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#003445A7"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnEmpty"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="0.46"
            android:background="@drawable/button_empty"
            android:onClick="clickedEmpty"
            android:soundEffectsEnabled="true"
            android:text="Empty"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnDirections"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="0.24"
            android:background="@drawable/button_directions"
            android:onClick="clickedDirections"
            android:soundEffectsEnabled="true"
            android:text="Directions"
            android:textColor="#ffffff"
            android:textColorLink="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnTaken"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="0.30"
            android:background="@drawable/button_taken"
            android:onClick="clickedDirections"
            android:soundEffectsEnabled="true"
            android:text="Taken"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
